{
  "name": "one-app-cli",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test:lint": "eslint --ext js,jsx,snap,md .",
    "test:unit": "NODE_ENV=production jest",
    "test": "npm run test:unit",
    "test:git-history": "commitlint --from origin/master --to HEAD",
    "posttest": "npm run test:lint && npm run test:git-history"
  },
  "devDependencies": {
    "@americanexpress/one-app-ducks": "*",
    "@americanexpress/one-app-router": "*",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "amex-jest-preset": "^5.0.0",
    "core-js": "^3.2.1",
    "enzyme": "^3.2.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^6.8.0",
    "eslint-config-amex": "^11.1.0",
    "holocron": "*",
    "holocron-module-route": "*",
    "husky": "^3.1.0",
    "immutable": "*",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "mock-fs": "^4.8.0",
    "prop-types": "*",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "*",
    "react-immutable-proptypes": "*",
    "react-redux": "*",
    "redux": "*",
    "regenerator-runtime": "^0.13.3",
    "reselect": "*"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/americanexpress/one-app-cli.git"
  },
  "jest": {
    "preset": "amex-jest-preset",
    "collectCoverageFrom": [
      "packages/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/build/**",
      "!packages/*/lib/**",
      "!packages/*/bin/**",
      "!packages/*/test-utils.js",
      "!packages/*/test-results/**"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 99.35,
        "branches": 98.96,
        "lines": 99.66,
        "functions": 97.37
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
